<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created.</h2>
  <% @article.errors.full_messages.each do |msg| %>
  <ul> 
    <li><%= msg %></li>
  </ul>
  <% end %>
<% end %>

<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: "btn btn-primary btn-lg"  %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel Request and Return to Articles Listing", articles_path %> ]
  </div>
</div>

